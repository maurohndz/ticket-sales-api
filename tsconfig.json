{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "types": ["node", "jest", "cucumber"],
    "typeRoots": ["./node_modules/@types"],
  },
  // Archivos a incluir en la compilación
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  // Archivos a excluir de la compilación
  "exclude": [
    "node_modules", 
    "dist", 
    "**/models/**/*",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}