{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist"
  },
  // Archivos a incluir en la compilación
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  // Archivos a excluir de la compilación
  "exclude": ["node_modules", "dist", "**/models/**/*"]
}