{
    "name": "apis-colas",
    "version": "1.0.0",
    "description": "Monorepo containing three APIs: notification, back-office, and box-office",
    "private": true,
    "type": "module",
    "scripts": {
        "box-office:models": "dotenv -v ENVIRONMENT=local -- node ./src/Contexts/BoxOffice/shared/infrastructure/persistence/postgresql/config/sequelize_auto.js",
        "box-office:api:local": "dotenv -v ENVIRONMENT=local -- ts-node-dev --respawn --transpile-only src/Apps/BoxOffice/api/index.ts",
        "lint": "npm run lint --workspaces",
        "lint:fix": "npm run lint:fix --workspaces",
        "prepare": "husky install"
    },
    "author": "Mauro Hern√°ndez",
    "license": "ISC",
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^24.0.10",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.35.1",
        "@typescript-eslint/parser": "^8.35.1",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^17.0.1",
        "dotenv-cli": "^8.0.0",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.7",
        "sequelize-auto": "^0.8.8",
        "uuid": "^11.1.0"
    }
}
