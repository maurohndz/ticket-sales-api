{
  "name": "apis-colas",
  "version": "1.0.0",
  "description": "Monorepo containing three APIs: notification, back-office, and box-office",
  "private": true,
  "workspaces": [
    "notification-api",
    "back-office-api",
    "box-office-api"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "prepare": "husky install"
  },
  "keywords": [
    "monorepo",
    "api",
    "microservices"
  ],
  "author": "Mauro Hern√°ndez",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
